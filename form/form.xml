<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="basic">

    <field
      name="name"
      type="text"
      label="NAME"
      required="true"
      placeholder="NAME_PLACEHOLDER"
    />

    <field
      name="email"
      type="email"
      label="EMAIL"
      required="true"
      placeholder="EMAIL_PLACEHOLDER"
    />

    <field
      name="subject"
      type="text"
      label="SUBJECT"
      required="true"
      placeholder="SUBJECT_PLACEHOLDER"
    />

    <field
      name="body"
      type="textarea"
      label="MESSAGE"
      required="true"
      placeholder="MESSAGE_PLACEHOLDER"
    />


  </fieldset>
</form>
